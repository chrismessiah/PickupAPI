@page
@model IndexModel
@{
    ViewData["Title"] = "IpsumAPI";
}
<div class="index-container">
  <h1>.NET Lorem Ipsum API</h1>
  <div class="buttons">
    <div class="button active">POST</div>
    <div class="button">GET</div>
  </div>
  <div id="route-container">
    <span>Route:</span>
    <select name="route">
      <option value="tomato">api/ipsum/</option>
      <option value="barbeque">api/ipsums/</option>
    </select>
  </div>
  <div id="editor-container">
    <div id="editor"></div>
    <div id="editor-bottom">
      <div>request</div>
      <div class="button">send</div>
    </div>
  </div>
  <script type="text/javascript">prepareEditor();</script>
  <div id="response-container">
    <div id="response">
      <p>bla</p>
    </div>
    <div id="response-bottom">
      <span>response</span>
    </div>
  </div>
</div>
